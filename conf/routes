# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /dropbox                    controllers.DropboxTest.index
GET     /dropbox/auth-finish        controllers.DropboxTest.authFinish(code: String ?="", state: String ?="")

GET     /naggers                    controllers.Application.listNaggers
POST    /naggers/add                controllers.Application.addNagger
POST    /naggers/:id                controllers.Application.updateNagger(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
